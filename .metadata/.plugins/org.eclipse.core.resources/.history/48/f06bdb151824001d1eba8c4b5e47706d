#include <stdio.h>
#include <stdlib.h>

int main(void) {

	setbuf(stdout,NULL);
	int numeroUno;
	int numeroDos;
	int numeroTres;
	int numeroMasGrande;
	int numeroMasChico;
	int numeroMedio;
	int resultado;

	printf("Numero uno: ");
	scanf("%d", &numeroUno);
	printf("Numero dos: ");
	scanf("%d", &numeroDos);
	printf("Numero tres: ");
	scanf("%d", &numeroTres);


if (numeroUno>numeroDos && numeroUno>numeroTres)
{
	numeroMasGrande = numeroUno;
	printf("El numero más grande es %d",numeroMasGrande);

}

else if (numeroDos>numeroUno && numeroDos>numeroTres)
{
	numeroMasGrande = numeroDos;
	printf("El numero más grande es %d",numeroMasGrande);

}

else if (numeroTres>numeroUno && numeroTres>numeroDos)
{
	numeroMasGrande = numeroTres;
	printf("El numero más grande es %d",numeroMasGrande);

}

if (numeroUno<numeroDos && numeroUno<numeroTres)
{
	numeroMasChico = numeroUno;
	printf("El numero más chico es %d",numeroMasChico);

}

else if (numeroDos<numeroUno && numeroDos<numeroTres)
{
	numeroMasChico = numeroDos;
	printf("El numero más chico es %d",numeroMasChico);

}

else if (numeroTres<numeroUno && numeroTres<numeroDos)
{
	numeroMasChico = numeroTres;
	printf("El numero más chico es %d",numeroMasChico);

}

if (numeroUno<numeroMasGrande && numeroUno>numeroMasChico)
{
	numeroMedio = numeroUno;
	printf("El numero medio es %d",numeroMedio);

}

else if (numeroDos<numeroMasGrande && numeroDos>numeroMasChico)
{
	numeroMedio = numeroDos;
	printf("El numero medio es %d",numeroMedio);

}

else if (numeroTres<numeroMasGrande && numeroTres>numeroMasChico)
{
	numeroMedio = numeroTres;
	printf("El numero medio es %d",numeroMedio);

}

else
{
	printf("No hay numero del medio");
}


	return 0;
}
