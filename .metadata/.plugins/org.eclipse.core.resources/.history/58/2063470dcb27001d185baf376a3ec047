//Ingresar 5 caracteres e informar cuantas letras p (min√∫sculas) se ingresaron.

#include <stdio.h>
#include <stdlib.h>

int main(void) {

	setbuf(stdout, NULL);
	char cadenaC[5] = {'G','a','s','t','i'};
	char cadenaC2[5] = {'0','0','0','0','0'};
	int i;

	printf("\n%c",cadenaC2[0]);
	printf("%c",cadenaC2[1]);
	printf("%c",cadenaC2[2]);
	printf("%c",cadenaC2[3]);
	printf("%c",cadenaC2[4]);
	printf("%s",cadenaC2);
	printf("%s",cadenaC2);
	for(i=0; i<5;i++)
	{
		fflush(stdin);
		fflush(stdout);
		printf("\nIngrese un caracter:");
		scanf("%c",&cadenaC2[i]);


		printf("\n%c",cadenaC2[0]);
		printf("%c",cadenaC2[1]);
		printf("%c",cadenaC2[2]);
		printf("%c",cadenaC2[3]);
		printf("%c",cadenaC2[4]);
		printf("%s",cadenaC2);
	}

	printf("%c",cadenaC[0]);
	printf("%c",cadenaC[1]);
	printf("%c",cadenaC[2]);
	printf("%c",cadenaC[3]);
	printf("%c",cadenaC[4]);
	printf("%s",cadenaC);

	printf("\n%c",cadenaC2[0]);
	printf("%c",cadenaC2[1]);
	printf("%c",cadenaC2[2]);
	printf("%c",cadenaC2[3]);
	printf("%c",cadenaC2[4]);
	printf("%s",cadenaC2);

	return EXIT_SUCCESS;
}
